@model TP1examuml.Models.Medecin
@{
    ViewData["Title"] = "Index";
}





<h1>Liste des Rendez Vous  </h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Date RendezVous
            </th>
            <th>
               Description
            </th>
            <th>
                Medecin
            </th>
            
            <th>
                Patient
            </th>
            <th>
                Statut
            </th>
            <th>
                Telephone
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.rendez_vous)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateRv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                  <td>
            @Html.DisplayFor(modelItem => item.Medecin.DisplayName)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Statut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |

                </td>
            </tr>
        }
    </tbody>
</table>


