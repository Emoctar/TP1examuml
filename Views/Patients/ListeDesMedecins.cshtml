@model IEnumerable<TP1examuml.Models.Medecin>
@{
    ViewData["Title"] = "ListeMedecin";
}

<h1>Liste des Medecins</h1>





<link  href="~/lib/Datatables/dataTables.bootstrap5.min.css"/>


