<table class="table">
    <thead>
        <tr>
            <th>
                Nom
            </th>
            <th>
               Prenom
            </th>
            <th>
              Email
            </th>
            
            <th>
             Specialite
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Medecin item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Specialite)
                </td>
                <td>
                    
                   
                </td>
            </tr>
        }
    </tbody>
</table>

